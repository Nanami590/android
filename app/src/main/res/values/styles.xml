<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="primaryButtonText">
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="secondaryButtonText">
        <item name="android:textColor">@color/buttonTextColorSecondary</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="primaryButton" parent="primaryButtonText">
        <item name="android:width">0dp</item>
        <item name="android:height">100dp</item>
    </style>

    <style name="secondaryButton" parent="secondaryButtonText">
        <item name="android:width">0dp</item>
        <item name="android:height">75dp</item>
    </style>

    <style name="removeButton" parent="secondaryButtonText">
        <item name="android:width">0dp</item>
        <item name="android:height">50dp</item>
    </style>
</resources>